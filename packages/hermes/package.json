{
  "name": "@lindorm/hermes",
  "version": "0.3.2",
  "license": "AGPL-3.0-or-later",
  "author": "Jonn Nilsson",
  "repository": {
    "url": "https://github.com/lindorm-io/monorepo",
    "directory": "packages/hermes"
  },
  "bugs": "https://github.com/lindorm-io/monorepo/issues",
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "build": "rimraf dist && tsc -b ./tsconfig.build.json",
    "example": "ts-node example/hermes.ts",
    "integration": "compd --file docker-compose.yml jest --config jest.config.integration.js --detectOpenHandles --runInBand --watch",
    "integration:focus": "compd --file docker-compose.yml jest --config jest.config.integration.js --detectOpenHandles --runInBand --watch $1",
    "prettier": "prettier --write ./src/*",
    "test": "jest --watch --",
    "test:ci": "npm run test:unit",
    "test:integration": "jest --config jest.config.integration.js --runInBand --",
    "test:unit": "jest --config jest.config.js --",
    "typecheck": "tsc --watch",
    "typecheck:ci": "tsc",
    "update": "ncu -i",
    "update:auto": "ncu -u"
  },
  "dependencies": {
    "@lindorm/aes": "^0.5.3",
    "@lindorm/case": "^0.1.9",
    "@lindorm/date": "^0.3.1",
    "@lindorm/is": "^0.1.9",
    "@lindorm/json-kit": "^0.5.1",
    "@lindorm/kryptos": "^0.4.3",
    "@lindorm/message": "^0.1.2",
    "@lindorm/random": "^0.2.0",
    "@lindorm/scanner": "^0.3.5",
    "@lindorm/sha": "^0.2.2",
    "deepmerge": "^4.3.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@lindorm/kafka": "^0.2.0",
    "@lindorm/logger": "^0.3.2",
    "@lindorm/mongo": "^0.6.5",
    "@lindorm/postgres": "^0.3.5",
    "@lindorm/rabbit": "^0.5.1",
    "@lindorm/redis": "^0.7.0"
  }
}
