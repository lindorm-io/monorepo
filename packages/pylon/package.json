    "prettier": "prettier --write ./src/*",
    "test": "jest --watch --",
    "test:ci": "npm run test:unit && npm run test:integration",
    "test:integration": "jest --config jest.config.integration.js --",
    "test:unit": "jest --config jest.config.js --",
    "typecheck": "tsc --watch",
    "typecheck:ci": "tsc",
    "update": "ncu -i",
    "update:auto": "ncu -u"
