{
  "name": "@lindorm/config",
  "version": "0.1.2",
  "license": "AGPL-3.0-or-later",
  "author": "Jonn Nilsson",
  "repository": {
    "url": "https://github.com/lindorm-io/monorepo",
    "directory": "packages/config"
  },
  "bugs": "https://github.com/lindorm-io/monorepo/issues",
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "build": "rimraf dist && tsc -b ./tsconfig.build.json && chmod +x dist/cli.js",
    "example": "ts-node example",
    "integration": "compd --file docker-compose.yml jest --config jest.config.integration.js --watch",
    "integration:focus": "compd --file docker-compose.yml jest --config jest.config.integration.js --watch $1",
    "prettier": "prettier --write ./src/*",
    "test": "jest --watch --",
    "test:ci": "npm run test:unit",
    "test:integration": "jest --config jest.config.integration.js --",
    "test:unit": "jest --config jest.config.js --",
    "typecheck": "tsc --watch",
    "typecheck:ci": "tsc",
    "update": "ncu -u"
  },
  "bin": {
    "config": "dist/cli.js"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.10.3",
    "@lindorm/case": "^0.1.7",
    "@lindorm/is": "^0.1.7",
    "@lindorm/utils": "^0.4.1",
    "config": "^3.3.12",
    "dotenv": "^16.4.5",
    "js-yaml": "^4.1.0",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@lindorm/types": "^0.2.1",
    "@types/config": "^3.3.4",
    "@types/js-yaml": "^4.0.9",
    "commander": "^13.1.0"
  }
}
