  "repository": "https://github.com/lindorm-io/monorepo",
  "bugs": "https://github.com/lindorm-io/monorepo/issues",
  "scripts": {
    "build": "lerna run build",
    "init": "ts-node ./.scripts/initialise-package.ts && npm i",
    "lint": "lerna exec -- eslint . --ext .ts,.tsx",
    "prepare": "husky",
    "prettier": "lerna run prettier",
    "release": "lerna publish",
    "test": "compd --file docker-compose.yml lerna run test:ci",
    "test:ci": "lerna run test:ci",
    "typecheck": "lerna run typecheck:ci",
    "update": "ncu -i",
    "update:auto": "ncu -u && lerna run update:auto && npm install && npm audit fix"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "compd": "^4.1.1",
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "fs-extra": "^11.3.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-extended": "^6.0.0",
    "lerna": "^8.2.3",
    "lint-staged": "^16.1.5",
    "mockdate": "^3.0.5",
    "nock": "^13.5.5",
    "node-fetch": "^2.6.12",
    "npm-check-updates": "^18.0.3",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "optionalDependencies": {
    "@nx/nx-darwin-arm64": "19.6.2",
    "@nx/nx-darwin-x64": "19.6.2",
    "@nx/nx-linux-x64-gnu": "19.6.2",
    "@nx/nx-win32-x64-msvc": "19.6.2"
  },
  "engines": {
    "node": ">=24.4.0"
  },
  "workspaces": [
    "packages/*"
  ]
}
